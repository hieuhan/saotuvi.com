<div class="card-body p-0">
    <div class="table-responsive scrollbar">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Tên</th>
                    <th scope="col">Dung lượng</th>
                    <th scope="col">Loại file</th>
                    <th scope="col"> </th>
                    <th scope="col">Ngày tạo</th>
                </tr>
            </thead>
            <tbody>
                <%if(typeof (data) !='undefined' && data.length> 0) {
                    for(var index = 0; index < data.length; index ++){ %>
                        <tr class="hover-actions-trigger">
                            <td class="align-middle text-nowrap">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-xl">
                                        <img class="rounded-circle" src="<%= stringHeplers.getSlug(data[index].path) %>"
                                            alt="<%=data[index].name%>" />
                                    </div>
                                    <div class="ms-2">
                                        <%=data[index].name%>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle text-nowrap">
                                <%= stringHeplers.getFileSize(data[index].size) %>
                            </td>
                            <td class="align-middle text-nowrap">
                                <%= data[index].contentType %>
                            </td>
                            <td class="w-auto">
                                <div class="btn-group btn-group hover-actions end-0 me-4" style="position: absolute;">
                                    <button class="btn btn-light choose-image" type="button" data-bs-toggle="tooltip"
                                        data-bs-placement="top"
                                        data-name="<%= data[index].name %>"
                                        data-path="<%= data[index].path %>"
                                        title="Chọn">
                                        <span class="fas fa-check"></span>
                                    </button>
                                </div>
                            </td>
                            <td class="align-middle text-nowrap">
                                <%=data[index].createdAt.toLocaleString('en-GB', { hour12: false, }) %>
                            </td>
                        </tr>
                        <%} }%>
            </tbody>
        </table>
    </div>
</div>
<div class="card-footer">
    <div class="d-flex justify-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#" aria-label="Previous"><span
                            aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span
                            aria-hidden="true">&raquo;</span><span class="sr-only">Next</span></a></li>
            </ul>
        </nav>
    </div>
</div>